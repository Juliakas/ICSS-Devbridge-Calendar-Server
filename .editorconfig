[*.cs]

# CA1031: Do not catch general exception types
dotnet_diagnostic.CA1031.severity = silent

# CA1707: Identifiers should not contain underscores
dotnet_diagnostic.CA1707.severity = none

# CA5372: Use XmlReader For XPathDocument
dotnet_diagnostic.CA5372.severity = warning

# CS1591: Missing XML comment for publicly visible type or member
dotnet_diagnostic.CS1591.severity = silent

# CA1062: Validate arguments of public methods
dotnet_diagnostic.CA1062.severity = silent

# CA1822: Member CreateErrorCollection does not access instance data and can be marked as static (Shared in VisualBasic)
dotnet_diagnostic.CA1822.severity = silent

# CA1724: The type name UserLogicTest conflicts in whole or in part with the namespace name 'DevBridgeAPI.Tests.UseCases.UserLogicTest'. Change either name to eliminate the conflict.
dotnet_diagnostic.CA1724.severity = none

# CA1034: Nested types should not be visible
dotnet_diagnostic.CA1034.severity = none

# CA1305: Specify IFormatProvider
dotnet_diagnostic.CA1305.severity = none